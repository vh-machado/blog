<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :login %><br>
    <%= f.text_field :login %>
  </div>

  <div>
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %><br>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <% if @user.errors.any? %>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>
